{
    "model": "UNet",
    "model_configs":{
        "input_channels": 3,
        "num_classes": 1
    },
    "dataset_name": "CarvanaDataset",
    "dataset_configs":{
        "scale": [480, 320],
        "isEdge": false
    },
    "use_gpu": true,
    "val_interval": 200,
    "batchsize": 4,
    "epochs": 20,

    "loss": "BCEWithLogitsLoss",
    "optimizer": "RMSprop",
    "optimizer_configs":{
        "lr": 1e-4,
        "weight_decay": 1e-8,
        "momentum": 0.9
    },
    "scheduler": "ReduceLROnPlateau",
    "scheduler_configs":{
        "mode": "min",
        "factor": 0.1,
        "patience": 2
    },
    "val_percent": 0.1,

    "resume_path": null,
    "checkpoint_path": "./checkpoints/",

    "tb_dir": "./runs"
}