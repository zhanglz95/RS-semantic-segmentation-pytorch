{
    "model": "MiniUNet",
    "model_configs":{
        "input_channels": 3,
        "num_classes": 1
    },
    "dataset_name": "MappingChallengeDataset",
    "dataset_configs":{
        "scale": 1.0,
        "isEdge": true
    },
    "use_gpu": true,
    "val_interval": 200,
    "batchsize": 32,
    "epochs": 20,

    "loss": "weighted_cross_entropy_loss",
    "optimizer": "RMSprop",
    "optimizer_configs":{
        "lr": 1e-4,
        "weight_decay": 1e-8,
        "momentum": 0.9
    },
    "scheduler": "ReduceLROnPlateau",
    "scheduler_configs":{
        "mode": "min",
        "factor": 0.1,
        "patience": 2
    },
    "hasVal": true,
    "val_percent": 0.1,

    "resume_path": null,
    "checkpoint_path": "./checkpoints/",

    "tb_dir": "./runs"
}