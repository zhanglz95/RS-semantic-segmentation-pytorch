{
    "model": "UNet",
    "model_configs":{
        "input_channels": 3,
        "num_classes": 1
    },
    "dataset_name": "PASCALDataset",
    "dataset_configs":{
        "scale": [480, 320]
    },
    "use_gpu": true,
    "val_interval": 200,
    "batchsize": 4,
    "epochs": 100,

    "loss": "BCEWithLogitsLoss",
    "optimizer": "SGD",
    "optimizer_configs":{
        "lr": 0.01,
        "weight_decay": 2e-4,
        "momentum": 0.9
    },
    "scheduler": "ReduceLROnPlateau",
    "scheduler_configs":{
        "mode": "min",
        "factor": 0.1,
        "patience": 2
    },
    "hasVal": true,
    "val_percent": 0.1,

    "resume_path": null,
    "checkpoint_path": "./checkpoints/",

    "tb_dir": "./runs"
}