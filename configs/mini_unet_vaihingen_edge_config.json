{
    "model": "MiniUNet",
    "model_configs":{
        "input_channels": 3,
        "num_classes": 1
    },
    "dataset_name": "VaihingenDataset",
    "dataset_configs":{
        "scale": 1.0,
        "maskPath": "./data/vaihingen/edges_width_2"
    },
    "use_gpu": true,
    "val_interval": 100,
    "batchsize": 16,
    "epochs": 20000,

    "loss": "weighted_cross_entropy_loss",
    "optimizer": "RMSprop",
    "optimizer_configs":{
        "lr": 1e-3,
        "weight_decay": 1e-8,
        "momentum": 0.9
    },
    "scheduler": "ReduceLROnPlateau",
    "scheduler_configs":{
        "mode": "min",
        "factor": 0.1,
        "patience": 4
    },
    "hasVal": true,
    "val_percent": 0.05,

    "resume_path": null,
    "checkpoint_path": "./checkpoints/",

    "tb_dir": "./runs"
}