{
    "model": "OCDNet",
    "model_configs":{
        "input_channels": 3,
        "num_classes": 1
    },
    "dataset_name": "VaihingenDataset",
    "dataset_configs":{
        "scale": 1.0,
        "isEdge": true
    },
    "use_gpu": true,
    "val_interval": 100,
    "batchsize": 4,
    "epochs": 20,

    "loss": "BCEWithLogitsLoss",
    "optimizer": "SGD",
    "optimizer_configs":{
        "lr": 0.1,
        "weight_decay": 2e-4,
        "momentum": 0.9
    },
    "scheduler": "ReduceLROnPlateau",
    "val_percent": 0.1,

    "resume_path": null,
    "checkpoint_path": "./checkpoints/",

    "tb_dir": "./runs"
}